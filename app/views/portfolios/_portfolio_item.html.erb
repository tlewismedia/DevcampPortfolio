
<div class="col-md-4">
  <div class="card mb-4 box-shadow">
    
    <%= image_tag portfolio_item.thumb_image, class:"card-img-top" unless portfolio_item.thumb_image.nil? %>
    <div class="card-body">
      <p class="card-text"><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></p>
      <p><%= portfolio_item.subtitle %></p>
      <p><%= portfolio_item.body %></p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <%= link_to "Edit Item", edit_portfolio_path(portfolio_item), class:"btn btn-sm btn-outline-secondary" %>
          <%= link_to 'Delete Portfolio Item', portfolio_path(portfolio_item), method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-sm btn-outline-secondary" %>
        </div>
      </div>
    </div>
  </div>
</div>